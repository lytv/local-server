{
  "compilerOptions": {
    "target": "es2020",
    "rootDir": "./src",
    "module": "commonjs",
    "types": [
      "vitest/globals"
    ],
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
